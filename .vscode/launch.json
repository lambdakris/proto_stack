{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend (FastAPI)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Debug Frontend (Streamlit)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/frontend",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack",
            "configurations": [
                "Debug Backend (FastAPI)",
                "Debug Frontend (Streamlit)"
            ]
        }
    ]
}